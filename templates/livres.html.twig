{% extends 'base.html.twig' %}
    {% block main %}
    <article>
        <h2 class="center">Liste des Livres</h2>
                {% for livre in livres %}
        <div class="livre border">
            <h3 class="center"> {{ livre.title }}</h3>
            <p class="center"> {{ livre.author }}</p>
            <em class="center date">Publi√© le:{{ livre.publishedAt|date('d/m/y')}}</em>
            <br>
            <div class="divImg">
            <img class="coverImg" src="{{livre.img}}", alt="{{ livre.title }}">
            </div>
                        <a class="aLivres" href="{{ path('livre', {"id":livre.id}) }}">Voir Plus</a>
        </div>
                {% endfor %}
    </article>
        {% endblock main %}







