<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href={% block css %}"{{ asset('style.css') }}"{% endblock css %}>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title> {%block title %} Document {% endblock title %} </title>
</head>
<header class="Header">
    <nav class="menuHeader border">
        <ul class="flex ulHeader">
            <li class="liHeader border">
                <a class="aHeader" href="{{ path('admin_home') }}">Home</a>
            </li>
            <li class="liHeader border">
                <a class="aHeader" href="{{ path('admin_livres') }}">Livres</a>
            </li>
            <li class="liHeader border">
                <a class="aHeader" href="{{ path('admin_auteurs') }}">Auteurs</a>
            </li>
            <li class="liHeader border">
                <a class="aHeader" href="{{ path('app_logout') }}">Déconexion</a>
            </li>
        </ul>
        <form action="{{ path('search_books') }}">
            <input type="text" name="query">
            <input type="submit">
        </form>

    </nav>
</header>
<body class="body">
{% block main %}
{% endblock main %}
</body>
</html>
